    });

    function hideGroups() {
        $(".motorgroup").hide();
        $(".acopladorgroup").hide();
        $(".cardangroup").hide();
        $(".poliagroup").hide();
        $(".coroagroup").hide();
        $(".redutorgroup").hide();
        $(".bombagroup").hide();
        $(".ventiladorgroup").hide();
        $(".compressorgroup").hide();
    }

    //$(document).on('load', '#TypeId', function () {
    //    alert(this.value);
