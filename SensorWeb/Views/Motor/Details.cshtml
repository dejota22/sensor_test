    //});

    ///;//$('#TypeId').load(aFunc);

    /*$(document).on('change', '#TypeId', aFunc);*/
    $(document).on('change', '#TypeId', function () { aFunc($("#TypeId").val()); });
    /*$(document).on('load', '#TypeId', aFunc);*/

    function hideGroups() {
        $(".motorgroup").hide();
        $(".acopladorgroup").hide();
        $(".cardangroup").hide();
        $(".poliagroup").hide();
        $(".coroagroup").hide();
        $(".redutorgroup").hide();
        $(".bombagroup").hide();
        $(".ventiladorgroup").hide();
        $(".compressorgroup").hide();
    }

    function aFunc(typeId) {
        hideGroups();

        if (typeId == 1) {
            $(".motorgroup").show();
            $(".acopladorgroup").show();
            $(".cardangroup").show();
            $(".poliagroup").show();
            $(".coroagroup").show();
        }

        if (typeId == 2) {
            $(".acopladorgroup").show();
        }

        if (typeId == 3) {
            $(".cardangroup").show();
        }

        if (typeId == 4) {
            $(".poliagroup").show();
        }

        if (typeId == 5) {
            $(".coroagroup").show();
        }

        if (typeId == 6) {
            $(".redutorgroup").show();
        }

        if (typeId == 7) {
            $(".bombagroup").show();
        }

        if (typeId == 8) {
            $(".ventiladorgroup").show();
        }

        if (typeId == 9) {
            $(".compressorgroup").show();
        }
    }

</script>

